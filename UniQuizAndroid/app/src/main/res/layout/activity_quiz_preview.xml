<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="phoenix.uniquizandroid.activity.QuizPreviewActivity"
    android:background="@color/colorPrimary">
    <TextView
        android:id="@+id/quiz_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="QUIZ NAME"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="@drawable/white_card"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:elevation="4dp">
        <TextView
            android:id="@+id/quiz_difficulty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="difficulty"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:gravity="bottom|center_horizontal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Resultados da tua última resolução:"

            android:layout_marginTop="20dp"

            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respotas corretas:"
                />

            <TextView
                android:id="@+id/right_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"

                android:paddingLeft="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respotas erradas:"
                />

            <TextView
                android:id="@+id/wrong_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:paddingLeft="16dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/begin_button"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Começar"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:elevation="0dp"/>
    </LinearLayout>


</LinearLayout>
